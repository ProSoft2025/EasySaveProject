<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EasySaveV2.ViewModels"
             xmlns:local="using:EasySaveV2.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySaveV2.Views.HomePage"
             x:DataType="local:TranslationManager">

	<Grid DataContext="{Binding}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
			<Border Background="#6C757D" Padding="10" CornerRadius="5">
				<StackPanel>
					<TextBlock Text="{Binding TotalDataBackedUp}" FontSize="16"/>
				</StackPanel>
			</Border>
			<Border Background="#17A2B8" Padding="10" CornerRadius="5">
				<StackPanel>
					<TextBlock Text="{Binding TotalBackupTime}" FontSize="16"/>
				</StackPanel>
			</Border>
		</StackPanel>

		<Button Content="{Binding BackToHomePage}"
                HorizontalAlignment="Right" Click="OnReturnToMainClick"/>
	</Grid>
</UserControl>
