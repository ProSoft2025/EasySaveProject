<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySaveV2.AddBackupPage">
	<StackPanel Margin="20">
		
		<TextBlock Text="Add Backup" FontSize="24" Margin="0 0 0 20"/>
		<TextBlock Text="Job Name"/>
		<TextBox Name="JobNameTextBox"/>
		
		<TextBlock Text="Source Directory"/>
		<TextBox Name="SourceDirectoryTextBox"/>
		
		<TextBlock Text="Target Directory"/>
		<TextBox Name="TargetDirectoryTextBox"/>
		
		<TextBlock Text="Backup Type"/>
		<ComboBox Name="BackupTypeComboBox">
			<ComboBoxItem Content="Complete Backup"/>
			<ComboBoxItem Content="Differential Backup"/>
		</ComboBox>
		<Button Content="Add Backup" Click="OnAddBackupClick"/>
	</StackPanel>
</UserControl>
