<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySaveV2.PageMenu">


	<UserControl.Styles>
		<Style Selector="ListBoxItem:selected">
			<Setter Property="Background" Value="Red"/>
			<!-- Couleur bleue -->
			<Setter Property="Foreground" Value="White"/>
		</Style>
	</UserControl.Styles>
	
	<DockPanel>
		<!-- Sidebar -->
		<ListBox DockPanel.Dock="Left" Width="200" Background="#333" Cursor="Hand" Foreground="White" SelectionChanged="OnMenuSelectionChanged">
			<ListBoxItem Tag="Home">🏠 Home</ListBoxItem>
			<ListBoxItem Tag="ViewBackup">📁 View Backup</ListBoxItem>
			<ListBoxItem Tag="AddBackup">⚙️  Add a backup</ListBoxItem>
			<ListBoxItem Tag="RemoveBackup">⚙️ Delete a backup</ListBoxItem>
			<ListBoxItem Tag="RestoreBackup">⚙️ Restore a backup</ListBoxItem>
			<ListBoxItem Tag="ExecuteBackup">⚙️ Execute backups</ListBoxItem>
			<ListBoxItem Tag="Encryption">⚙️ Encryption </ListBoxItem>
			<ListBoxItem Tag="DailyLogs">⚙️ Daily logs</ListBoxItem>

		</ListBox>

		<!-- Contenu principal -->
		<ContentControl x:Name="ContentArea">

			</ContentControl>
	</DockPanel>
	
	
	
	
	
	
</UserControl>
