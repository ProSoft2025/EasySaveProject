<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySaveV2.Views.Pages.PriorityExtensionsPage">
    <StackPanel Margin="20">		
        <TextBlock Text="Priority Extensions List :" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="ExtensionsListBox" Height="400" Margin="0,0,0,20" SelectionChanged="ExtensionsListBox_SelectionChanged"/>
        <TextBox x:Name="ExtensionTextBox" Watermark="Enter the priority extension (Ex: .txt)" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add Extension" Click="OnAddExtensionClick" Margin="0,0,10,0"/>
            <Button Content="Delete Extension" Click="OnRemoveExtensionClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>