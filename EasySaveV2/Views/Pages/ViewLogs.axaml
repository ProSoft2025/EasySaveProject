<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySaveV2.ViewLogsPage">

	<Grid>
		<TabControl Margin="5">
			<TabItem Header="Daily Logs" Cursor="Hand">
				<StackPanel>
					<ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
						<TextBox Name="LogsContentTextBox" AcceptsReturn="True" IsReadOnly="True"/>
					</ScrollViewer>
					<Button Content="Sélectionner le fichier de Log" Click="SelectLogFile_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
				</StackPanel>
			</TabItem>

			<TabItem Header="Current State" Cursor="Hand">
				<StackPanel>
					<ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
						<TextBox Name="StateContentTextBox" AcceptsReturn="True"/>
					</ScrollViewer>
					<Button Content="Sélectionner le fichier de State" Click="SelectStateFile_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
				</StackPanel>
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>