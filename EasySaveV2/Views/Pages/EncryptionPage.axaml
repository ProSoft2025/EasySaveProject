<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySaveV2.EncryptionPage">
    <StackPanel Margin="20">		
        <TextBlock Text="Extensions List to Encrypt:" Width="115" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="ExtensionsListBox" Height="400" Margin="0,0,0,20" SelectionChanged="ExtensionsListBox_SelectionChanged"/>
        <TextBox x:Name="ExtensionTextBox" Watermark="Enter extension (Ex: .txt)" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Grid.Row="2" Content="Add Extension" Click="OnAddExtensionClick" Classes="proButton" Margin="0 0 10 10"/>
			<Button Grid.Row="2" Content="Delete Extension" Click="OnRemoveExtensionClick" Classes="proButton" Margin="0 0 0 10"/>
		</StackPanel>
    </StackPanel>
</UserControl>