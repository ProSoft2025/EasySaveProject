<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:EasySaveV2.Localization"
             x:Class="EasySaveV2.Views.ExecuteBackupPage"
             x:DataType="local:TranslationManager">

	<StackPanel Margin="20">
		<TextBlock Text="{Binding ExecuteBackup}" FontSize="24" Margin="0 0 0 20"/>
		<TextBlock Text="{Binding EnterBackupNumbers}" />
		<TextBox Name="BackupNumbersTextBox"/>
		<Button Content="{Binding ExecuteBackup}" Click="OnExecuteBackupClick" Margin="0 20 0 0"/>
		<TextBlock Name="ExecutionOutputTextBlock" Text="{Binding OutputPlaceholder}" Margin="20 0 0 0"/>
	</StackPanel>
</UserControl>
