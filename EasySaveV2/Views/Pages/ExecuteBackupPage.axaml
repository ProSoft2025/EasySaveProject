<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasySaveV2.ViewModels"
             x:Class="EasySaveV2.Views.ExecuteBackupPage"
             x:DataType="local:ExecuteBackupPageViewModel">


	<StackPanel Margin="20">
		<TextBlock Text="{Binding Translation.ExecuteBackup}" FontSize="24" Margin="0 0 0 20"/>
		<TextBlock Text="{Binding Translation.EnterBackupNumbers}"/>
		<TextBox Name="BackupNumbersTextBox"/>
		<Button Grid.Row="2" Content="{Binding Translation.ExecuteBackup}" Click="OnExecuteBackupClick" Classes="proButton" Margin="0 40 0 50"/>

		<ProgressBar Name="BackupProgressBar" Minimum="0" Maximum="100" Value="{Binding Backup.Progress}" Width="200" Height="30" ShowProgressText="True" Margin="0 0 0 10"/>
		<TextBlock Text="{Binding Backup.Status}" HorizontalAlignment="Center"/>

	</StackPanel>
</UserControl>
