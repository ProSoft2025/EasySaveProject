<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             
			 x:Class="EasySaveV2.ViewStatePage">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Backup Job State (Real-time)" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

		<ScrollView Grid.Row="1">
			<StackPanel>
				<TextBlock Text="{Binding TaskName}" FontWeight="Bold"/>
				<TextBlock Text="{Binding Timestamp, StringFormat='{}{0:G}'}"/>
				<TextBlock Text="{Binding Status}"/>
				<TextBlock Text="{Binding TotalFiles, StringFormat='Total Files: {0}'}"/>
				<TextBlock Text="{Binding TotalSize, StringFormat='Total Size: {0} bytes'}"/>
				<TextBlock Text="{Binding Progress, StringFormat='Progress: {0}%'}"/>
				<TextBlock Text="{Binding RemainingFiles, StringFormat='Remaining Files: {0}'}"/>
				<TextBlock Text="{Binding RemainingSize, StringFormat='Remaining Size: {0} bytes'}"/>
				<TextBlock Text="{Binding CurrentSource}"/>
				<TextBlock Text="{Binding CurrentTarget}"/>

			</StackPanel>
		</ScrollView>
	</Grid>
</UserControl>
