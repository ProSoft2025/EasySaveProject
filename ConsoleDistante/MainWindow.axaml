<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ConsoleDistante.MainWindow"
        Title="EasySaveApp - Console Distante"
		Background="#14172D">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Entrer l'adresse IP de l'application EasySaveApp distante:" Foreground="White"/>
			<TextBox Name="IPAddessTextBox" Width="200" Margin="5" />
			<TextBlock Text="Entrer le port de l'application EasySaveApp distante:" Foreground="White"/>
			<TextBox Name="PortTextBox" Width="200" Margin="5" />
			<Button Content="Envoyer" Width="100" Margin="10" Click="OnSendButtonClick" Foreground="White" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
			<TextBlock Name="MessageTextBlock" HorizontalAlignment="Center" />
		</StackPanel>
	</Grid>
</Window>
