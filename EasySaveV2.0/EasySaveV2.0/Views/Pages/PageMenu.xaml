<Page x:Class="EasySaveV2._0.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveV2._0.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <DockPanel>
        <!-- Sidebar -->
        <ListBox DockPanel.Dock="Left" Width="200" Background="#333" Foreground="White">
            <ListBoxItem Tag="Home">🏠 Home</ListBoxItem>
            <ListBoxItem Tag="ViewBackup">📁 View Backup</ListBoxItem>
            <ListBoxItem Tag="AddBackup">⚙️ Add a backup</ListBoxItem>
            <ListBoxItem Tag="DeleteBackup">⚙️ Delete a backup</ListBoxItem>
            <ListBoxItem Tag="RestoreBackup">⚙️ Restore a backup</ListBoxItem>
            <ListBoxItem Tag="ExecuteBackups" Selected="ListBoxItem_Selected">⚙️ Execute backups</ListBoxItem>
            <ListBoxItem Tag="ViewLogs">⚙️ View logs</ListBoxItem>
        </ListBox>

        <!-- Contenu principal -->
        <ContentControl x:Name="ContentArea">

        </ContentControl>
    </DockPanel>
</Page>
