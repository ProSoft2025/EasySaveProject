<Window x:Class="EasySaveV2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <!-- Grille de contenu par défaut -->
        <Grid Background="#333" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Title EasySave -->
            <TextBlock Text="EasySave" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="36" FontWeight="Bold" FontStyle="Italic"
                   Margin="0,20,0,0">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#0077BE"/>
                        <GradientStop Offset="1" Color="White"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="8" Color="Black" Opacity="0.7" ShadowDepth="4"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Logo -->
            <Image Source="pack://application:,,,/EasySaveV2.0;component/Assets/logo.ico" Grid.Row="0" Width="100" Height="100"
               HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- Start Button -->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                CornerRadius="10" BorderBrush="White" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.5" ShadowDepth="3"/>
                </Border.Effect>
                <Button Width="200" Height="50"
                    Background="#555" Foreground="White"
                    FontSize="36" FontWeight="Bold" FontStyle="Italic"
                    Click="OnStartButtonClick">
                    <TextBlock Text="Start" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Border>

            <!-- Language Selection -->
            <StackPanel Grid.Row="2" Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10">
                <Button Width="75" Background="Transparent" BorderThickness="0">
                    <Image Source="pack://application:,,,/EasySaveV2.0;component/Assets/english.png" Stretch="Uniform"/>
                </Button>

                <!-- Separator -->
                <Rectangle Width="2" Height="30" Fill="Black" Margin="5,0"/>

                <Button Width="75" Background="Transparent" BorderThickness="0">
                    <Image Source="pack://application:,,,/EasySaveV2.0;component/Assets/franceflag.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Version 2.0"
                   Grid.Row="2" Grid.Column="2"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   FontSize="12"  FontStyle="Italic" Foreground="White"/>

            <TextBlock Text="EasySave 2025 ALL rights reserved"
                   Grid.Row="2" Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   FontSize="12" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
